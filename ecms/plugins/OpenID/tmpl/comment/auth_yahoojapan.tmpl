<form method="post" action="<mt:var name="script_url">">
  <input type="hidden" name="__mode" value="login_external" />
  <input type="hidden" name="openid_url" value="yahoo.jp" />
  <input type="hidden" name="blog_id" value="<mt:var name="blog_id">" />
  <input type="hidden" name="entry_id" value="<mt:var name="entry_id">" />
  <input type="hidden" name="static" value="<mt:var name="static" escape="html">" />
  <input type="hidden" name="key" value="YahooJP" />
  <div class="actions-bar actions-bar-login text-right">
    <input src="<mt:var name="static_uri">plugins/OpenID/images/comment/yahoojp-button.png" type="image" name="submit" value="<__trans phrase="Sign In">" />
  </div>
  <div class="auth-option-info text-right">
    <img src="<mt:var name="static_uri">plugins/OpenID/images/comment/blue_moreinfo.png" />
    <a href="http://openid.yahoo.co.jp/">
      <__trans phrase="Turn on OpenID for your Yahoo! Japan account now">
    </a>
  </div>
</form>
